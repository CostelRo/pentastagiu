<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="localAirport" class="airportmanager.Airport">
        <constructor-arg value="IAS" />
        <constructor-arg value="Iasi" />
        <constructor-arg value="Romania" />
    </bean>


    <bean name="airportcode"    class="java.lang.String" />
    <bean name="airportcity"    class="java.lang.String" />
    <bean name="airportcountry" class="java.lang.String" />

    <bean name="airport" class="airportmanager.Airport">
        <constructor-arg ref="airportcode" />
        <constructor-arg ref="airportcity" />
        <constructor-arg ref="airportcountry" />
    </bean>


    <context:annotation-config />
    <context:component-scan base-package="airportmanager" />

</beans>