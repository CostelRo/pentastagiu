<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="airport-code"    class="java.lang.String" />
    <bean name="airport-city"    class="java.lang.String" />
    <bean name="airport-country" class="java.lang.String" />

    <bean name="local-date-time" class="java.time.LocalDateTime" />
    <bean name="local-date" class="java.time.LocalDate" />


    <bean name="localAirport" class="airportmanager.Airport">
        <constructor-arg value="IAS" />
        <constructor-arg value="Iasi" />
        <constructor-arg value="Romania" />
    </bean>

    <bean name="airport" class="airportmanager.Airport">
        <constructor-arg ref="airport-code" />
        <constructor-arg ref="airport-city" />
        <constructor-arg ref="airport-country" />
    </bean>


    <context:annotation-config />
    <context:component-scan base-package="airportmanager" />

</beans>